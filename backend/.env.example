# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/furhimalaya"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Admin Credentials (default admin user)
ADMIN_EMAIL=admin@furhimalaya.com
ADMIN_PASSWORD=admin123

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,webp

# CORS Configuration
FRONTEND_URL=https://furhimalaya.com

# Rate Limiting Configuration (in milliseconds)
# General API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# Contact Form Rate Limiting
CONTACT_RATE_LIMIT_WINDOW_MS=3600000
CONTACT_RATE_LIMIT_MAX_SUBMISSIONS=3

# Upload Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=900000
UPLOAD_RATE_LIMIT_MAX_UPLOADS=20

# Password Operations Rate Limiting
PASSWORD_RATE_LIMIT_WINDOW_MS=3600000
PASSWORD_RATE_LIMIT_MAX_ATTEMPTS=3

# Public Endpoints Rate Limiting
PUBLIC_RATE_LIMIT_WINDOW_MS=60000
PUBLIC_RATE_LIMIT_MAX_REQUESTS=30

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
# Security Configuration
# Brute Force Protection
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION_MS=900000

# User-Based Rate Limiting
USER_RATE_LIMIT_GENERAL_WINDOW_MS=900000
USER_RATE_LIMIT_GENERAL_MAX=100
USER_RATE_LIMIT_AUTH_WINDOW_MS=900000
USER_RATE_LIMIT_AUTH_MAX=5
USER_RATE_LIMIT_ADMIN_WINDOW_MS=900000
USER_RATE_LIMIT_ADMIN_MAX=200
USER_RATE_LIMIT_UPLOAD_WINDOW_MS=3600000
USER_RATE_LIMIT_UPLOAD_MAX=20

# Rate Limit Whitelist (comma-separated IPs)
RATE_LIMIT_WHITELIST=
